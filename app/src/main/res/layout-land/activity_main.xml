<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <woowacourse.paint.PainterView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/painter"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/range_slider"
        android:layout_width="300dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <View
        android:id="@+id/red"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/range_slider"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#FF0000"
        />

    <View
        android:id="@+id/orange"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/range_slider"
        app:layout_constraintStart_toEndOf="@id/red"
        android:background = "#FFA500"
        />

    <View
        android:id="@+id/yellow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/range_slider"
        app:layout_constraintStart_toEndOf="@id/orange"
        android:background = "#FDFE48"
        />

    <View
        android:id="@+id/green"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/range_slider"
        app:layout_constraintStart_toEndOf="@id/yellow"
        android:background = "#599468"
        />

    <View
        android:id="@+id/blue"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/range_slider"
        app:layout_constraintStart_toEndOf="@id/green"
        android:background = "#0c70f2"
        />
    <TextView
        android:id="@+id/brush"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="펜"
        app:layout_constraintTop_toBottomOf="@id/red"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/rectangle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="사각"
        app:layout_constraintTop_toBottomOf="@id/red"
        app:layout_constraintStart_toEndOf="@id/brush"
        />

    <TextView
        android:id="@+id/triangle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="삼각"
        app:layout_constraintTop_toBottomOf="@id/red"
        app:layout_constraintStart_toEndOf="@id/rectangle"
        />


    <TextView
        android:id="@+id/circle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="원"
        app:layout_constraintTop_toBottomOf="@id/red"
        app:layout_constraintStart_toEndOf="@id/triangle"
        />

    <TextView
        android:id="@+id/eraser"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="지우개"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/red"
        app:layout_constraintStart_toEndOf="@id/circle"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
