<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <woowacourse.paint.DrawingView
        android:id="@+id/drawing_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/slider_brush_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_brush_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:value="10"
        android:valueFrom="1"
        android:valueTo="50"
        app:layout_constraintBottom_toTopOf="@id/tool_panel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tool_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_pen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="펜"
            app:layout_constraintBottom_toTopOf="@+id/btn_black"
            app:layout_constraintEnd_toStartOf="@+id/btn_rectangle"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_rectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="직사각형"
            app:layout_constraintBottom_toTopOf="@+id/btn_black"
            app:layout_constraintEnd_toStartOf="@+id/btn_circle"
            app:layout_constraintStart_toEndOf="@+id/btn_pen" />

        <Button
            android:id="@+id/btn_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            app:layout_constraintBottom_toTopOf="@+id/btn_black"
            app:layout_constraintEnd_toStartOf="@id/btn_eraser"
            app:layout_constraintStart_toEndOf="@+id/btn_rectangle" />

        <Button
            android:id="@+id/btn_eraser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지우개"
            app:layout_constraintBottom_toTopOf="@+id/btn_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_circle" />

        <Button
            android:id="@+id/btn_black"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/btn_clear"
            app:layout_constraintEnd_toStartOf="@id/btn_red"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_red"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/red"
            app:layout_constraintBottom_toTopOf="@+id/btn_clear"
            app:layout_constraintEnd_toStartOf="@id/btn_orange"
            app:layout_constraintStart_toEndOf="@id/btn_black"
            tools:text="" />

        <Button
            android:id="@+id/btn_orange"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/orange"
            app:layout_constraintBottom_toTopOf="@+id/btn_clear"
            app:layout_constraintEnd_toStartOf="@id/btn_yellow"
            app:layout_constraintStart_toEndOf="@id/btn_red"
            tools:text="" />

        <Button
            android:id="@+id/btn_yellow"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/yellow"
            app:layout_constraintBottom_toTopOf="@+id/btn_clear"
            app:layout_constraintEnd_toStartOf="@id/btn_green"
            app:layout_constraintStart_toEndOf="@id/btn_orange"
            tools:text="" />

        <Button
            android:id="@+id/btn_green"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/green"
            app:layout_constraintBottom_toTopOf="@+id/btn_clear"
            app:layout_constraintEnd_toStartOf="@id/btn_blue"
            app:layout_constraintStart_toEndOf="@id/btn_yellow"
            tools:text="" />

        <Button
            android:id="@+id/btn_blue"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/blue"
            app:layout_constraintBottom_toTopOf="@+id/btn_clear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_green"
            tools:text="" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="전체 지우기"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/btn_redo"
            app:layout_constraintStart_toEndOf="@+id/btn_undo" />

        <Button
            android:id="@+id/btn_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="undo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_clear"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_redo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="redo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_clear" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
