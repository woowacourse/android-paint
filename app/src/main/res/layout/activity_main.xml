<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="woowacourse.paint.data.model.SettingMode" />

        <variable
            name="vm"
            type="woowacourse.paint.presentation.ui.MainViewModel" />

        <variable
            name="onColorChangeButtonClick"
            type="kotlin.jvm.functions.Function0" />

        <variable
            name="onThicknessChangeButtonClick"
            type="kotlin.jvm.functions.Function0" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_color_change_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@{vm.uiState.settingMode == SettingMode.COLOR ? @drawable/bg_selected_button : @drawable/bg_unselected_button}"
            android:gravity="center"
            android:onClick="@{() -> onColorChangeButtonClick.invoke()}"
            android:paddingVertical="4dp"
            android:text="@string/main_color_change_btn_label"
            android:textColor="@{vm.uiState.settingMode == SettingMode.COLOR ? @color/white : @color/primary_color}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_thickness_change_btn"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_thickness_change_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@{vm.uiState.settingMode == SettingMode.THICKNESS ? @drawable/bg_selected_button : @drawable/bg_unselected_button}"
            android:gravity="center"
            android:onClick="@{() -> onThicknessChangeButtonClick.invoke()}"
            android:paddingVertical="4dp"
            android:text="@string/main_thickness_change_btn_label"
            android:textColor="@{vm.uiState.settingMode == SettingMode.THICKNESS ? @color/white : @color/primary_color}"
            app:layout_constraintBottom_toBottomOf="@+id/tv_color_change_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_color_change_btn"
            app:layout_constraintTop_toTopOf="@+id/tv_color_change_btn" />

        <woowacourse.paint.presentation.curstomView.PaintBoardView
            android:id="@+id/pbv_paint_board_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            app:onTouch="@{() -> vm.finishSetting()}"
            app:layout_constraintBottom_toTopOf="@+id/tv_color_change_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_color_select_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@id/tv_color_change_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:visible="@{vm.uiState.settingMode == SettingMode.COLOR}">

            <View
                android:id="@+id/view_select_red"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="@color/red"
                android:onClick="@{() -> pbvPaintBoardView.setStrokeColor(@color/red)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@+id/view_select_orange"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view_select_orange"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@color/orange"
                android:onClick="@{() -> pbvPaintBoardView.setStrokeColor(@color/orange)}"
                app:layout_constraintBottom_toBottomOf="@+id/view_select_red"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@+id/view_select_yellow"
                app:layout_constraintStart_toEndOf="@+id/view_select_red"
                app:layout_constraintTop_toTopOf="@+id/view_select_red" />

            <View
                android:id="@+id/view_select_yellow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@color/yellow"
                android:onClick="@{() -> pbvPaintBoardView.setStrokeColor(@color/yellow)}"
                app:layout_constraintBottom_toBottomOf="@+id/view_select_red"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@+id/view_select_green"
                app:layout_constraintStart_toEndOf="@+id/view_select_orange"
                app:layout_constraintTop_toTopOf="@+id/view_select_red" />

            <View
                android:id="@+id/view_select_green"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@color/green"
                android:onClick="@{() -> pbvPaintBoardView.setStrokeColor(@color/green)}"
                app:layout_constraintBottom_toBottomOf="@+id/view_select_red"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@+id/view_select_blue"
                app:layout_constraintStart_toEndOf="@+id/view_select_yellow"
                app:layout_constraintTop_toTopOf="@+id/view_select_red" />

            <View
                android:id="@+id/view_select_blue"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:background="@color/blue"
                android:onClick="@{() -> pbvPaintBoardView.setStrokeColor(@color/blue)}"
                app:layout_constraintBottom_toBottomOf="@+id/view_select_red"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/view_select_green"
                app:layout_constraintTop_toTopOf="@+id/view_select_red" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/rs_thickness_setting_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:valueFrom="0.0"
            android:valueTo="100.0"
            app:onValueChange="@{(slider, value, fromUser) -> pbvPaintBoardView.setStrokeWidth(value)}"
            app:layout_constraintBottom_toTopOf="@+id/tv_thickness_change_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:visible="@{vm.uiState.settingMode == SettingMode.THICKNESS}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
