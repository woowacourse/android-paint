<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="vm"
            type="woowacourse.paint.ui.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <woowacourse.paint.customView.PaintBoard
            android:id="@+id/pb_board"
            currentColor="@{ContextCompat.getColor(context, vm.appliedColor.colorRes)}"
            currentStrokeWidth="@{vm.appliedStroke}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/slider_pen_stroke_width"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_pen_stroke_width"
            registerSliderChangeListener="@{vm.onSelectedStrokeChange}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:value="@{vm.selectedPenStroke}"
            android:valueFrom="0.0"
            android:valueTo="100.0"
            app:layout_constraintBottom_toTopOf="@id/rv_colors" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_colors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/btn_color_change"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/item_main_board_color" />

        <Button
            android:id="@+id/btn_color_change"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:onClick="@{()->vm.onAppliedColorChange()}"
            android:text="@string/main_pen_color_change"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/gl_center_guide_line"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:onClick="@{()->vm.onAppliedStrokeChange()}"
            android:text="@string/main_pen_stroke_change"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/gl_center_guide_line" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_center_guide_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
