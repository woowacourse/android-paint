<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <woowacourse.paint.painting.PaintingView
            android:id="@+id/pv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_colors"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/common_margin"
            android:layout_marginEnd="@dimen/common_margin"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.075"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pv"
            app:layout_constraintVertical_weight="0.3"
            tools:listitem="@layout/item_color" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/rs"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:valueFrom="0.0f"
            android:valueTo="100.0f"
            app:layout_constraintEnd_toEndOf="@id/rv_colors"
            app:layout_constraintHeight_percent="0.075"
            app:layout_constraintStart_toStartOf="@id/rv_colors"
            app:layout_constraintTop_toBottomOf="@id/rv_colors" />

        <Button
            android:id="@+id/btn_pen"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/main_pen"
            app:layout_constraintEnd_toStartOf="@+id/btn_rectangle"
            app:layout_constraintHeight_percent="0.075"
            app:layout_constraintStart_toStartOf="@+id/rs"
            app:layout_constraintTop_toBottomOf="@id/rs" />

        <Button
            android:id="@+id/btn_rectangle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/main_square"
            app:layout_constraintBottom_toBottomOf="@id/btn_pen"
            app:layout_constraintEnd_toStartOf="@+id/btn_circle"
            app:layout_constraintStart_toEndOf="@+id/btn_pen"
            app:layout_constraintTop_toBottomOf="@id/rs" />

        <Button
            android:id="@+id/btn_circle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/main_circle"
            app:layout_constraintBottom_toBottomOf="@id/btn_pen"
            app:layout_constraintEnd_toStartOf="@+id/btn_eraser"
            app:layout_constraintStart_toEndOf="@+id/btn_rectangle"
            app:layout_constraintTop_toBottomOf="@id/rs" />

        <Button
            android:id="@+id/btn_eraser"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/main_eraser"
            app:layout_constraintBottom_toBottomOf="@id/btn_pen"
            app:layout_constraintEnd_toEndOf="@+id/rs"
            app:layout_constraintStart_toEndOf="@+id/btn_circle"
            app:layout_constraintTop_toBottomOf="@id/rs" />

        <Button
            android:id="@+id/btn_undo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:drawableTop="@drawable/ic_undo"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintStart_toEndOf="@id/btn_pen"
            app:layout_constraintEnd_toStartOf="@id/btn_rectangle"
            app:layout_constraintTop_toBottomOf="@id/btn_pen" />

        <Button
            android:id="@+id/btn_redo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:drawableTop="@drawable/ic_redo"
            app:layout_constraintBottom_toBottomOf="@id/btn_undo"
            app:layout_constraintStart_toEndOf="@id/btn_circle"
            app:layout_constraintEnd_toStartOf="@id/btn_eraser"
            app:layout_constraintTop_toTopOf="@id/btn_undo" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>