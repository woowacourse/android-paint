<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="paintColorUiModel"
            type="woowacourse.paint.uimodel.PaintColorUiModel" />

        <variable
            name="actionHandler"
            type="woowacourse.paint.action.PaintActionHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginHorizontal="6dp">

        <ImageView
            android:id="@+id/iv_color"
            colorBackgroundTint="@{paintColorUiModel.paintColor.colorRes}"
            colorIsChecked="@{paintColorUiModel.isChecked}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/color_circle"
            android:clickable="true"
            android:onClick="@{() -> actionHandler.changeColorRes(paintColorUiModel.paintColor.colorRes)}"
            android:padding="8dp"
            tools:backgroundTint="@color/red" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
