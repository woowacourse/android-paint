<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="paintColor"
            type="woowacourse.paint.PaintColor" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/v_paint_color"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/bg_paint_color"
            android:backgroundTint="@{context.getColor(paintColor.color)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_paint_color_check"
            isVisible="@{paintColor.isSelected}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/bg_paint_color_check"
            android:padding="3dp"
            android:src="@drawable/ic_check"
            app:layout_constraintBottom_toBottomOf="@id/v_paint_color"
            app:layout_constraintEnd_toEndOf="@id/v_paint_color" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
