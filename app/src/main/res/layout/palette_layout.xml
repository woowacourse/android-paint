<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="onClickPaletteListener"
            type="woowacourse.paint.OnPaletteClickListener" />

        <variable
            name="isPaletteVisible"
            type="Boolean" />

    </data>

    <merge>

        <View
            android:id="@+id/red_palette"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:background="@color/red"
            android:onClick="@{() -> onClickPaletteListener.onClickPaint(@color/red)}"
            android:visibility="@{isPaletteVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@id/btn_change_color"
            app:layout_constraintEnd_toStartOf="@id/orange_palette"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/orange_palette"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:background="@color/orange"
            android:onClick="@{() -> onClickPaletteListener.onClickPaint(@color/orange)}"
            android:visibility="@{isPaletteVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@id/btn_change_color"
            app:layout_constraintEnd_toStartOf="@id/yellow_palette"
            app:layout_constraintStart_toEndOf="@id/red_palette"
            app:layout_constraintTop_toTopOf="@id/red_palette" />

        <View
            android:id="@+id/yellow_palette"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:background="@color/yellow"
            android:onClick="@{() -> onClickPaletteListener.onClickPaint(@color/yellow)}"
            android:visibility="@{isPaletteVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@id/btn_change_color"
            app:layout_constraintEnd_toStartOf="@id/green_palette"
            app:layout_constraintStart_toEndOf="@id/orange_palette"
            app:layout_constraintTop_toTopOf="@id/red_palette" />

        <View
            android:id="@+id/green_palette"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:background="@color/green"
            android:onClick="@{() -> onClickPaletteListener.onClickPaint(@color/green)}"
            android:visibility="@{isPaletteVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@id/btn_change_color"
            app:layout_constraintEnd_toStartOf="@id/blue_palette"
            app:layout_constraintStart_toEndOf="@id/yellow_palette"
            app:layout_constraintTop_toTopOf="@id/red_palette" />

        <View
            android:id="@+id/blue_palette"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/blue"
            android:onClick="@{() -> onClickPaletteListener.onClickPaint(@color/blue)}"
            android:visibility="@{isPaletteVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@id/btn_change_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/green_palette"
            app:layout_constraintTop_toTopOf="@id/red_palette" />

    </merge>
</layout>
