<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="drawingTool"
            type="woowacourse.paint.ui.model.DrawingToolModel" />

        <variable
            name="onItemClick"
            type="kotlin.jvm.functions.Function1" />
    </data>

    <ImageView
        android:id="@+id/iv_drawing_tool"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/bg_drawing_tool"
        android:onClick="@{() -> onItemClick.invoke(drawingTool)}"
        android:src="@{context.getDrawable(drawingTool.image)}" />
</layout>