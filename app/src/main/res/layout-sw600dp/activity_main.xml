<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <woowacourse.paint.DrawingBoardView
        android:id="@+id/drawing_board"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_colors"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:itemCount="12"
        tools:listitem="@layout/color_item" />

    <RadioGroup
        android:id="@+id/rg_drawing_types"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@id/rb_drawing_pen"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/rv_colors"
        app:layout_constraintEnd_toStartOf="@id/range_slider"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/rb_drawing_pen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drawing_pen" />

        <RadioButton
            android:id="@+id/rb_drawing_rectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/drawing_rectangle" />

        <RadioButton
            android:id="@+id/rb_drawing_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/drawing_circle" />

        <RadioButton
            android:id="@+id/rb_drawing_eraser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text="@string/drawing_eraser" />

    </RadioGroup>


    <com.google.android.material.slider.RangeSlider
        android:id="@+id/range_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:valueFrom="5.0"
        android:valueTo="50.0"
        app:layout_constraintBottom_toBottomOf="@id/rg_drawing_types"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rg_drawing_types"
        app:layout_constraintTop_toTopOf="@id/rg_drawing_types" />

</androidx.constraintlayout.widget.ConstraintLayout>
