<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="woowacourse.paint.viewmodel.PaintViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <woowacourse.paint.PaintBoard
            android:id="@+id/paint_board"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/rcv_paint_color" />

        <ImageView
            android:id="@+id/iv_clear_drawings"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="12dp"
            android:background="@drawable/ic_ripple"
            android:onClick="@{() -> vm.clearDrawings()}"
            android:src="@drawable/ic_clear"
            app:layout_constraintEnd_toEndOf="@id/paint_board"
            app:layout_constraintTop_toTopOf="@id/paint_board" />

        <ImageView
            android:id="@+id/iv_undo_drawing"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="12dp"
            android:background="@drawable/ic_ripple"
            android:onClick="@{() -> vm.undoDrawing()}"
            android:src="@drawable/ic_undo"
            app:layout_constraintEnd_toStartOf="@id/iv_clear_drawings"
            app:layout_constraintTop_toTopOf="@id/paint_board" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_paint_drawing_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/paint_horizontal_margin"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="@id/rcv_paint_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:itemCount="4"
            tools:listitem="@layout/item_paint_drawing_mode" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/range_slider_thickness"
            thicknessVisibility="@{vm.drawingMode}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/paint_horizontal_margin"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@id/rcv_paint_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rcv_paint_drawing_mode" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_paint_color"
            paintColorVisibility="@{vm.drawingMode}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/paint_horizontal_margin"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/range_slider_thickness"
            tools:itemCount="5"
            tools:listitem="@layout/item_paint_color" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
